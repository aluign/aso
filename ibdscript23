#!/bin/bash

if [ $# -ne 1 ]; then
    echo "Uso: $0 <ruta_completa_directorio>"
    exit 1
fi

DIRECTORIO="$1"

if [ ! -d "$DIRECTORIO" ]; then
    echo "Error: $DIRECTORIO no es un directorio válido."
    exit 2
fi

contador=0

echo "Contenido de $DIRECTORIO:"
echo "--------------------------------------"

for entrada in "$DIRECTORIO"/*; do
    [ -e "$entrada" ] || continue   
    
    nombre=$(basename "$entrada")
    
    if [ -L "$entrada" ]; then
        tipo="Enlace simbólico"
    elif [ -f "$entrada" ]; then
        tipo="Fichero regular"
    elif [ -d "$entrada" ]; then
        tipo="Directorio"
    elif [ -b "$entrada" ]; then
        tipo="Archivo especial de bloque"
    elif [ -c "$entrada" ]; then
        tipo="Archivo especial de carácter"
    else
        tipo="Otro tipo"
    fi
    
    echo "$nombre -> $tipo"
    contador=$((contador+1))
done

echo "--------------------------------------"
echo "Total de entradas procesadas: $contador"
